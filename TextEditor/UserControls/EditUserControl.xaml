<UserControl x:Class="TextEditor.UserControls.EditUserControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:TextEditor.UserControls"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                <Button x:Name="EditBtn" Content="Edit" Width="50" Background="Gray"/>
                <Button x:Name="PreviewBtn" Content="Preview" Width="60" Click="PreviewBtn_Click"/>
            </StackPanel>

            <Button 
                x:Name="SaveBtn" 
                Content="Save" 
                Width="50" 
                Grid.Column="1" 
                HorizontalAlignment="Right"
                Click="SaveBtn_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button 
               x:Name="BoldBtn" 
               Content="B" 
               Width="20" Height="20" 
               FontWeight="Bold" 
               Click="BoldBtn_Click"/>

            <Button 
                x:Name="ItalicBtn" 
                Content="I" 
                Width="20" Height="20" 
                FontStyle="Italic"
                Click="ItalicBtn_Click"/>

            <Button 
                x:Name="HeaderBtn" 
                Content="#" 
                Width="20" Height="20"
                Click="HeaderBtn_Click"/>

            <Button 
                x:Name="ListBtn" 
                Content="-" 
                FontWeight="Bold"
                Width="20" Height="20"
                Click="ListBtn_Click"/>

            <Button 
                x:Name="UndoBtn" 
                Content="←" 
                FontWeight="Bold"
                Width="20" Height="20"
                Click="UndoBtn_Click"/>
        </StackPanel>

        <TextBox
           x:Name="EditTextBox"
           Grid.Row="2"
           AcceptsReturn="True"
           TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto"
           TextChanged="EditTextBox_TextChanged"
           PreviewKeyDown="EditTextBox_PreviewKeyDown"
           Padding="5"/>
    </Grid>
</UserControl>
